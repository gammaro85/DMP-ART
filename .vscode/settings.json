{
     "editor.bracketPairColorization.enabled": true,
     "editor.guides.bracketPairs": true,
     "files.autoSave": "afterDelay",
     "editor.defaultFormatter": "Anthropic.claude-code",
     "editor.formatOnPaste": true,
     "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
     "npm.autoDetect": "off",
     "python-envs.pythonProjects": [],
     "testExplorer.mergeSuites": true,
     "editor.accessibilitySupport": "on",
     "editor.fontSize": 13,
     "editor.wordWrap": "wordWrapColumn",
     "editor.tabSize": 5,
     "editor.defaultColorDecorators": "always",
     "editor.defaultFoldingRangeProvider": "Anthropic.claude-code",
     "window.autoDetectColorScheme": false,
     "window.density.editorTabHeight": "default",
     "window.zoomLevel": 0,
     "window.zoomPerWindow": true,
     "vscode-edge-devtools.browserFlavor": "Stable",
     "editor.allowVariableLineHeights": false,
     "editor.allowVariableFontsInAccessibilityMode": true,
     "workbench.editor.alwaysShowEditorActions": true,
     "workbench.editor.autoLockGroups": {
          "imagePreview.previewEditor": true,
          "pdf.preview": true
     },
     "editor.inlayHints.maximumLength": 50,
     "workbench.activityBar.iconClickBehavior": "focus",
     "workbench.tree.expandMode": "doubleClick",
     "workbench.tree.enableStickyScroll": false,
     "workbench.editor.limit.value": 20,
     "workbench.editor.limit.perEditorGroup": true,
     "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
     },
     "vscode-edge-devtools.defaultEntrypoint": "http://127.0.0.1:5000/",

     // Claude Code API Configuration for Promo Credits
     // These settings enable Claude Code to use your promotional credits
     "claude-code.apiEndpoint": "https://api.anthropic.com",
     "claude-code.environmentVariables": {
          "ANTHROPIC_BASE_URL": "https://api.anthropic.com",
          "ANTHROPIC_MODEL": "claude-sonnet-4-5-20250929"
     },

     // Optional: Disable telemetry if preferred
     "claude-code.telemetry.enabled": false
}