}

.comment-item-actions {
    margin-left: 10px;
}

.comment-actions {
    text-align: center;
    padding-top: 10px;
    border-top: 1px solid var(--border-light);
}

/* Modals */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
