}

.modal-body input:focus,
.modal-body textarea:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 2px rgba(30, 58, 95, 0.1);
}

.modal-body textarea {
    resize: vertical;
    min-height: 100px;
}

.modal-actions {
    padding: 20px 30px;
    border-top: 1px solid var(--border-light);
