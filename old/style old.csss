    max-width: 1200px;
    margin: 0 auto;
    padding: clamp(15px, 3vw, 20px);
    width: 100%;
    box-sizing: border-box;
}

.tab-navigation {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    border-bottom: 2px solid var(--border-light);
}

.tab-btn {
    background: none;
    border: none;
    padding: 12px 20px;
    cursor: pointer;
    font-size: 1rem;
    color: var(--text-secondary);
    border-bottom: 3px solid transparent;
    transition: all 0.2s ease;
}

.tab-btn.active,
.tab-btn:hover {
    color: var(--primary-color);
    border-bottom-color: var(--primary-color);
}

.tab-panel {
    display: none;
}

.tab-panel.active {
    display: block;
}

.template-group {
    margin-bottom: 2rem;
    background: var(--bg-card);
    border-radius: var(--border-radius-lg);
    padding: 1.5rem;
    box-shadow: var(--shadow);
    border: 1px solid var(--border-light);
}

.template-group h2 {
    color: var(--primary-color);
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-light);
}

.template-item {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: var(--bg-secondary);
    border-radius: var(--border-radius-md);
    border: 1px solid var(--border-light);
}

.template-item h3 {
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    font-size: 1rem;
}

.template-input {
    width: 100%;
    min-height: 80px;
    padding: 10px;
    border: 2px solid var(--border-medium);
    border-radius: var(--border-radius-sm);
    background: var(--bg-card);
    color: var(--text-primary);
    font-family: inherit;
    font-size: 0.9rem;
    line-height: 1.4;
    resize: vertical;
    margin-bottom: 0.75rem;
}

.template-input:focus {
    outline: none;
    border-color: var(--primary);
}

/* ===========================================
   FOOTER STYLING
   =========================================== */

footer {
    background: var(--bg-secondary);
    border-top: 1px solid var(--border-light);
    padding: 1.5rem 0;
    margin-top: auto;
    backdrop-filter: blur(10px);
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    position: relative;
}

.footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 clamp(15px, 3vw, 20px);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: clamp(0.5rem, 2vw, 1rem);
    width: 100%;
    box-sizing: border-box;
}

.footer-main {
    color: var(--text-secondary);
    text-align: center;
    width: 100%;
}

.footer-links {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.footer-link {
    color: var(--text-secondary);
    text-decoration: none;
    padding: 8px 16px;
    border-radius: var(--border-radius-sm);
    transition: all 0.2s ease;
    font-size: 0.9rem;
}

.footer-link:hover {
    color: var(--primary-color);
    background: var(--bg-hover);
}

.footer-link.current-page {
    background: var(--primary);
    color: var(--light-color);
}

@media (max-width: 768px) {
    .footer-content {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }

    .footer-links {
        flex-direction: column;
        gap: 0.5rem;
    }
}

/* ===========================================
   DOCUMENTATION PAGE STYLES
   =========================================== */

.documentation-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: clamp(15px, 3vw, 20px);
    width: 100%;
    box-sizing: border-box;
}

.doc-header {
    text-align: center;
    margin-bottom: 3rem;
    background: var(--bg-card);
    border-radius: var(--border-radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow);
    border: 1px solid var(--border-light);
}

.doc-title {
    color: var(--primary-color);
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.doc-subtitle {
    color: var(--text-secondary);
    font-size: 1.2rem;
    line-height: 1.6;
}

.doc-section {
    margin-bottom: 3rem;
    background: var(--bg-card);
    border-radius: var(--border-radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow);
    border: 1px solid var(--border-light);
}

.doc-section h2 {
    color: var(--primary-color);
    font-size: 1.8rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--border-light);
}

.doc-section h3 {
    color: var(--text-primary);
    font-size: 1.3rem;
    margin: 1.5rem 0 0.75rem 0;
}

.doc-section p {
    color: var(--text-primary);
    line-height: 1.7;
    margin-bottom: 1rem;
}

.doc-section ul,
.doc-section ol {
    color: var(--text-primary);
    margin-left: 1.5rem;
    margin-bottom: 1rem;
}

.doc-section li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
}

.feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
}

.feature-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-light);
    border-radius: var(--border-radius-md);
    padding: 1.5rem;
    transition: all 0.3s ease;
}

.feature-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}

.feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
}

.feature-title {
    color: var(--primary-color);
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
}

.feature-description {
    color: var(--text-secondary);
    line-height: 1.6;
}

.workflow-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
}

.step-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-light);
    border-radius: var(--border-radius-md);
    padding: 1.5rem;
    text-align: center;
    position: relative;
}

.step-number {
    background: var(--primary-color);
    color: var(--light-color);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.2rem;
    margin: 0 auto 1rem auto;
}

.step-card h3 {
    color: var(--text-primary);
    margin-bottom: 0.75rem;
}

.step-card p {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.5;
}

.action-buttons {
    display: flex;
    gap: clamp(0.5rem, 2vw, 1rem);
    justify-content: center;
    margin: clamp(1rem, 4vw, 2rem) 0;
    flex-wrap: wrap;
}

@media (max-width: 768px) {
    .doc-title {
        font-size: 2rem;
    }

    .doc-subtitle {
        font-size: 1.1rem;
    }

    .doc-section {
        padding: 1.5rem;
    }

    .feature-grid,
    .workflow-steps {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .action-buttons {
        flex-direction: column;
        align-items: center;
    }
}

/* ===========================================
   REVIEW PAGE LAYOUT STYLES
   =========================================== */

/* Review layout with sidebar */
.review-layout {
    display: flex;
    gap: 30px;
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
}

.main-content {
    flex: 1;
    min-width: 0; /* Prevents flex item from overflowing */
}

.right-sidebar {
    width: 300px;
    min-width: 300px;
    background: var(--bg-card);
    border-radius: 8px;
    padding: 20px;
    box-shadow: var(--shadow-light);
    border: 1px solid var(--border-light);
    height: fit-content;
    position: sticky;
    top: 20px;
}

/* Navigation Grid */
.navigation-pane {
    margin-bottom: 30px;
}

.navigation-pane h3,
.quick-comments-pane h3,
.category-comments-pane h3 {
    color: var(--text-primary);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 15px;
    padding-bottom: 8px;
    border-bottom: 1px solid var(--border-light);
}

.nav-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 8px;
}

.nav-grid-btn {
    padding: 8px 4px;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--text-primary);
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 40px;
}

.nav-grid-btn:hover {
    background: var(--bg-hover);
    border-color: var(--primary);
    transform: translateY(-1px);
}

.nav-grid-btn.active {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
}

/* Quick Comments */
.quick-comments-pane {
    margin-bottom: 30px;
}

.quick-comments-list {
    max-height: 200px;
    overflow-y: auto;
}

.quick-comment-item {
    padding: 8px 12px;
    margin-bottom: 6px;
    background: var(--bg-secondary);
    border: 1px solid var(--border-light);
    border-radius: 4px;
    font-size: 0.85rem;
    color: var(--text-primary);
    cursor: pointer;
    transition: all 0.3s ease;
    border-left: 3px solid var(--accent-color);
}

.quick-comment-item:hover {
    background: var(--bg-hover);
    transform: translateX(2px);
    box-shadow: var(--shadow-light);
}

.quick-comment-item:active {
    transform: translateX(0);
}

/* Category Comments */
.category-comments-pane {
    margin-bottom: 20px;
}

.category-buttons {
    margin-bottom: 15px;
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.category-btn {
    width: 100%;
    padding: 8px 12px;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    background: var(--bg-primary);
    color: var(--text-primary);
    font-size: 0.85rem;
    outline: none;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: left;
}

.category-btn:hover {
    background: var(--bg-hover);
    border-color: var(--primary);
    transform: translateX(2px);
}

.category-btn.active {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
}

.category-comments-list {
    max-height: 250px;
    overflow-y: auto;
}

.category-comment-item {
    padding: 10px 12px;
    margin-bottom: 8px;
    background: var(--bg-secondary);
    border: 1px solid var(--border-light);
    border-radius: 4px;
    font-size: 0.85rem;
    color: var(--text-primary);
    cursor: pointer;
    transition: all 0.3s ease;
    border-left: 3px solid var(--success-color);
}

.category-comment-item:hover {
    background: var(--bg-hover);
    transform: translateX(2px);
    box-shadow: var(--shadow-light);
}

.category-comment-section {
    font-weight: 600;
    color: var(--primary-color);
    font-size: 0.8rem;
    margin-bottom: 5px;
}

.no-comments {
    text-align: center;
    color: var(--text-muted);
    font-style: italic;
    padding: 20px 10px;
    font-size: 0.85rem;
}

/* Mobile responsiveness */
@media (max-width: 1200px) {
    .review-layout {
        flex-direction: column;
    }
    
    .right-sidebar {
        width: 100%;
        position: static;
        order: -1; /* Move sidebar above main content on mobile */
    }
    
    .nav-grid {
        grid-template-columns: repeat(4, 1fr);
    }
    
    .quick-comments-list,
    .category-comments-list {
        max-height: 150px;
    }
}

@media (max-width: 768px) {
    .review-layout {
        padding: 15px;
        gap: 20px;
    }
    
    .right-sidebar {
        padding: 15px;
    }
    
    .nav-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 6px;
    }
    
    .nav-grid-btn {
        font-size: 0.7rem;
        padding: 6px 4px;
        min-height: 36px;
    }
}

/* ===========================================
   TEMPLATE EDITOR STYLES
   =========================================== */

/* Template Editor Container */
.template-editor-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    background: var(--bg-primary);
    color: var(--text-primary);
}

.page-header {
    text-align: center;
    margin-bottom: 30px;
    padding: 20px 0;
}

.page-header h1 {
    color: var(--text-primary);
    margin-bottom: 10px;
    font-size: 2.5rem;
    font-weight: 600;
}

.page-header p {
    color: var(--text-secondary);
    font-size: 1.1rem;
    margin: 0;
}

/* Tab Navigation */
.tab-navigation {
    display: flex;
    gap: 10px;
    margin-bottom: 30px;
    padding: 10px;
    background: var(--bg-secondary);
    border-radius: 8px;
    flex-wrap: wrap;
    align-items: center;
}

.tab-btn {
    padding: 12px 20px;
    border: 2px solid var(--border-color);
    background: var(--bg-card);
    color: var(--text-primary);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    font-weight: 500;
    outline: none;
}

.tab-btn:hover {
    background: var(--bg-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-light);
}

.tab-btn.active {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
    font-weight: 600;
}

.tab-btn i {
    font-size: 1rem;
}

.add-category-btn {
    padding: 12px 20px;
    border: 2px dashed var(--border-color);
    background: transparent;
    color: var(--text-secondary);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    outline: none;
}

.add-category-btn:hover {
    border-color: var(--primary);
    color: var(--primary);
    background: var(--bg-hover);
}

.remove-tab-btn {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    color: white;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    font-size: 12px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 8px;
    transition: background 0.2s;
}

.remove-tab-btn:hover {
    background: rgba(255, 255, 255, 0.3);
}

/* Tab Content */
.tab-content {
    background: var(--bg-card);
    border-radius: 8px;
    padding: 30px;
    box-shadow: var(--shadow-light);
    border: 1px solid var(--border-light);
}

.tab-panel {
    display: none;
}

.tab-panel.active {
    display: block;
}

.panel-header {
    margin-bottom: 30px;
    text-align: center;
}

.panel-header h2 {
    color: var(--text-primary);
    margin-bottom: 10px;
    font-size: 1.8rem;
    font-weight: 600;
}

.panel-header p {
    color: var(--text-secondary);
    font-size: 1rem;
    margin: 0;
}

/* Comments List */
.comments-list {
    margin-bottom: 30px;
    min-height: 200px;
}

.comment-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    margin-bottom: 10px;
    background: var(--bg-secondary);
    border-radius: 6px;
    border: 1px solid var(--border-light);
    transition: all 0.3s ease;
}

.comment-row:hover {
    box-shadow: var(--shadow-light);
    transform: translateY(-1px);
}

.comment-info {
    flex: 1;
}

.comment-name {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 5px;
    font-size: 0.95rem;
}

.comment-text {
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.4;
}

.comment-actions {
    display: flex;
    gap: 8px;
}

/* Structure Content */
.structure-content {
    margin-bottom: 30px;
}

.structure-list {
    display: grid;
    gap: 10px;
}

.structure-item {
    padding: 15px;
    background: var(--bg-secondary);
    border-radius: 6px;
    border: 1px solid var(--border-light);
    transition: all 0.3s ease;
}

.structure-item:hover {
    box-shadow: var(--shadow-light);
    transform: translateY(-1px);
}

.structure-header {
    display: flex;
    gap: 15px;
    align-items: center;
}

.section-id {
    font-weight: 600;
    color: var(--primary-color);
    min-width: 60px;
    font-size: 0.9rem;
}

.section-question {
    color: var(--text-primary);
    font-size: 0.9rem;
    line-height: 1.4;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 40px 20px;
    color: var(--text-muted);
    font-style: italic;
    background: var(--bg-tertiary);
    border-radius: 6px;
    border: 2px dashed var(--border-color);
}

/* Action Row */
.action-row {
    display: flex;
    gap: 10px;
    justify-content: center;
    flex-wrap: wrap;
}

/* Question Blocks in Category Tabs */
.question-block {
    margin-bottom: 25px;
    padding: 20px;
    background: var(--bg-secondary);
    border-radius: 8px;
    border: 1px solid var(--border-light);
}

.question-header h4 {
    color: var(--primary-color);
    margin-bottom: 8px;
    font-size: 1.1rem;
    font-weight: 600;
}

.question-text {
    color: var(--text-primary);
    margin-bottom: 15px;
    font-size: 0.9rem;
    line-height: 1.5;
    font-style: italic;
}

.question-comments {
    margin-top: 15px;
}

.comments-list {
    margin-bottom: 15px;
    min-height: 60px;
    max-height: 200px;
    overflow-y: auto;
}

.comment-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 12px;
    margin-bottom: 8px;
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    border-radius: 4px;
    transition: all 0.3s ease;
}

.comment-item:hover {
    box-shadow: var(--shadow-light);
    transform: translateY(-1px);
}

.comment-content {
    flex: 1;
    color: var(--text-primary);
    font-size: 0.85rem;
    line-height: 1.4;
}

.comment-item-actions {
    margin-left: 10px;
}

.comment-actions {
    text-align: center;
    padding-top: 10px;
    border-top: 1px solid var(--border-light);
}

/* Modals */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    align-items: center;
    justify-content: center;
}

.modal-content {
    background: var(--bg-card);
    border-radius: 8px;
    max-width: 500px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: var(--shadow-heavy);
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 30px;
    border-bottom: 1px solid var(--border-light);
}

.modal-header h3 {
    color: var(--text-primary);
    margin: 0;
    font-size: 1.3rem;
    font-weight: 600;
}

.close-btn {
    background: none;
    border: none;
    font-size: 24px;
    color: var(--text-secondary);
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.2s;
}

.close-btn:hover {
    background: var(--bg-hover);
    color: var(--text-primary);
}

.modal-body {
    padding: 30px;
}

.modal-body label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: var(--text-primary);
    font-size: 0.9rem;
}

.modal-body input,
.modal-body textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    background: var(--bg-primary);
    color: var(--text-primary);
    font-size: 0.9rem;
    margin-bottom: 20px;
    outline: none;
    transition: border-color 0.3s ease;
    font-family: inherit;
}

.modal-body input:focus,
.modal-body textarea:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 2px rgba(30, 58, 95, 0.1);
}

.modal-body textarea {
    resize: vertical;
    min-height: 100px;
}

.modal-actions {
    padding: 20px 30px;
    border-top: 1px solid var(--border-light);
    display: flex;
    gap: 10px;
    justify-content: flex-end;
}

/* Mobile Responsiveness */
@media (max-width: 768px) {
    .template-editor-container {
        padding: 15px;
    }
    
    .page-header h1 {
        font-size: 2rem;
    }
    
    .page-header p {
        font-size: 0.95rem;
    }
    
    .panel-header h2 {
        font-size: 1.3rem;
    }
    
    .modal-actions {
        flex-direction: column;
    }
}

@media (max-width: 480px) {
    .template-editor-container {
        padding: 10px;
    }
    
    .page-header h1 {
        font-size: 1.7rem;
    }
    
    .page-header p {
        font-size: 0.95rem;
    }
    
    .panel-header h2 {
        font-size: 1.3rem;
    }
    
    .modal-actions {
        flex-direction: column;
    }
}

