}

.tab-panel {
    display: none;
}

.tab-panel.active {
    display: block;
}

.panel-header {
    margin-bottom: 30px;
    text-align: center;
}

.panel-header h2 {
    color: var(--text-primary);
    margin-bottom: 10px;
    font-size: 1.8rem;
    font-weight: 600;
}

.panel-header p {
    color: var(--text-secondary);
    font-size: 1rem;
    margin: 0;
}

/* Comments List */
.comments-list {
    margin-bottom: 30px;
    min-height: 200px;
}

.comment-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    margin-bottom: 10px;
    background: var(--bg-secondary);
    border-radius: 6px;
    border: 1px solid var(--border-light);
    transition: all 0.3s ease;
}

.comment-row:hover {
    box-shadow: var(--shadow-light);
    transform: translateY(-1px);
}

.comment-info {
    flex: 1;
}

.comment-name {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 5px;
    font-size: 0.95rem;
}

.comment-text {
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.4;
}

.comment-actions {
    display: flex;
    gap: 8px;
}

/* Structure Content */
.structure-content {
    margin-bottom: 30px;
}

.structure-list {
    display: grid;
    gap: 10px;
}

.structure-item {
    padding: 15px;
    background: var(--bg-secondary);
    border-radius: 6px;
    border: 1px solid var(--border-light);
    transition: all 0.3s ease;
}

.structure-item:hover {
    box-shadow: var(--shadow-light);
    transform: translateY(-1px);
}

.structure-header {
    display: flex;
    gap: 15px;
    align-items: center;
}

.section-id {
    font-weight: 600;
    color: var(--primary-color);
    min-width: 60px;
    font-size: 0.9rem;
}

.section-question {
    color: var(--text-primary);
    font-size: 0.9rem;
    line-height: 1.4;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 40px 20px;
    color: var(--text-muted);
    font-style: italic;
    background: var(--bg-tertiary);
    border-radius: 6px;
    border: 2px dashed var(--border-color);
}

/* Action Row */
.action-row {
    display: flex;
    gap: 10px;
    justify-content: center;
    flex-wrap: wrap;
}

/* Question Blocks in Category Tabs */
.question-block {
    margin-bottom: 25px;
    padding: 20px;
    background: var(--bg-secondary);
    border-radius: 8px;
    border: 1px solid var(--border-light);
}

.question-header h4 {
    color: var(--primary-color);
    margin-bottom: 8px;
    font-size: 1.1rem;
    font-weight: 600;
}

.question-text {
    color: var(--text-primary);
    margin-bottom: 15px;
    font-size: 0.9rem;
    line-height: 1.5;
    font-style: italic;
}

.question-comments {
    margin-top: 15px;
}

.comments-list {
    margin-bottom: 15px;
    min-height: 60px;
    max-height: 200px;
    overflow-y: auto;
}

.comment-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 12px;
    margin-bottom: 8px;
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    border-radius: 4px;
    transition: all 0.3s ease;
}

.comment-item:hover {
    box-shadow: var(--shadow-light);
