/* ===========================================
   UNIFIED BUTTON STYLES
   =========================================== */

/* Base button styles */
.btn {
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    transition: all 0.3s ease;
    outline: none;
    white-space: nowrap;
    min-height: 40px;
    font-family: inherit;
}

.btn:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-light);
}

.btn:active {
    transform: translateY(0);
}

.btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
}

/* Button variants */
.btn-primary {
    background: var(--primary);
    color: white;
}

.btn-primary:hover {
    background: var(--primary-hover);
}

.btn-secondary {
    background: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
}

.btn-secondary:hover {
    background: var(--bg-hover);
    border-color: var(--primary);
}

.btn-success {
    background: var(--success);
    color: white;
}

.btn-success:hover {
    background: #218838;
}

.btn-danger {
    background: var(--danger);
    color: white;
}

.btn-danger:hover {
    background: #c82333;
}

.btn-warning {
    background: var(--warning);
    color: white;
}

.btn-warning:hover {
    background: #e0a800;
}

/* Button sizes */
.btn-sm {
    padding: 6px 12px;
    font-size: 0.8rem;
    min-height: 32px;
}

.btn-lg {
    padding: 12px 24px;
    font-size: 1rem;
    min-height: 48px;
}

/* Button block (full width) */
.btn-block {
    width: 100%;
    display: flex;
}

/* Icon buttons */
.btn-icon {
    padding: 8px;
    min-height: 36px;
    width: 36px;
}

.btn-icon i {
    margin: 0;
}

/* Button groups */
.btn-group {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
}

.btn-group .btn {
    flex: 1;
    min-width: 0;
}

/* Legacy button compatibility - update old classes */
.primary-btn,
.save-template-btn,
.save-btn,
.save-all-templates-btn {
    padding: 10px 20px;
    background: var(--primary) !important;
    color: white !important;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.3s ease;
    outline: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
}

.primary-btn:hover,
.save-template-btn:hover,
.save-btn:hover,
.save-all-templates-btn:hover {
    background: var(--primary-hover) !important;
    transform: translateY(-1px);
    box-shadow: var(--shadow-light);
}

.secondary-btn,
.add-btn,
.add-phrase-btn,
.add-question-btn {
    padding: 10px 20px;
    background: var(--success) !important;
    color: white !important;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.3s ease;
    outline: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
}

.secondary-btn:hover,
.add-btn:hover,
.add-phrase-btn:hover,
.add-question-btn:hover {
    background: #218838 !important;
    transform: translateY(-1px);
    box-shadow: var(--shadow-light);
}

.delete-btn,
.remove-phrase-btn,
.remove-question-btn {
    padding: 6px 12px;
    background: var(--danger) !important;
    color: white !important;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.8rem;
    font-weight: 500;
    transition: all 0.3s ease;
    outline: none;
    display: inline-flex;
    align-items: center;
    gap: 4px;
}

.delete-btn:hover,
.remove-phrase-btn:hover,
.remove-question-btn:hover {
    background: #c82333 !important;
       transform: translateY(-1px);
    box-shadow: var(--shadow-light);
}

/* Copy and reset buttons */
.copy-btn,
.reset-btn {
    padding: 6px 12px;
    background: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.8rem;
    font-weight: 500;
    transition: all 0.3s ease;
    outline: none;
    display: inline-flex;
    align-items: center;
    gap: 4px;
}

.copy-btn:hover {
    background: var(--primary);
    color: var(--light-color);
    border-color: var(--primary);
}

.reset-btn:hover {
    background: var(--secondary);
    color: var(--light-color);
    border-color: var(--secondary);
}

.clear-btn:hover {
    background: var(--error-color);
    color: var(--light-color);
    border-color: var(--error-color);
}

